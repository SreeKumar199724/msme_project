# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
OPENAI_API_VERSION=2024-12-01-preview

# Alternative: Standard OpenAI (if not using Azure OpenAI)
# OPENAI_API_KEY=your-openai-api-key-here

# Azure Speech Services
SPEECH_KEY=your-azure-speech-key-here
SPEECH_REGION=eastus

# MongoDB Configuration
# Option 1: MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
ASYNC_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Option 2: Azure Cosmos DB for MongoDB
# MONGODB_URI=mongodb://your-cosmosdb-account:your-key@your-account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@your-account@
# ASYNC_MONGODB_URI=mongodb://your-cosmosdb-account:your-key@your-account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@your-account@

# MongoDB Database and Collection Names
SUPPORT_DOC_DB_NAME=support_docs
SUPPORT_DOC_COLLECTION=agent_prompts

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: Application Insights
# APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key-here

# Optional: Custom Port (for local development)
# PORT=8503
